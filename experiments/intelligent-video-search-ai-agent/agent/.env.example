# ======================
# Video Keeper Agent - Environment Configuration
# ======================

# ==================
# Agent API Configuration
# ==================
API_HOST=localhost
API_PORT=8080

# ==================
# MCP Server Configuration
# ==================
MCP_HOST=localhost
MCP_PORT=8008
# Alternative: provide full URL instead of host/port
# MCP_SERVER_URL=http://localhost:8008/sse

# ==================
# AWS Configuration
# ==================
AWS_REGION=us-east-1

# ==================
# AI Model Configuration
# ==================
# Claude model for the Video Keeper Assistant
BEDROCK_MODEL_ID=us.anthropic.claude-3-5-sonnet-20241022-v2:0

# Model temperature (0.0 to 1.0, lower = more consistent)
MODEL_TEMPERATURE=0.3

# ==================
# Development Configuration
# ==================
# Enable debug logging
DEBUG=false

# Environment type
ENVIRONMENT=development

# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO