# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here

# Bedrock Configuration
BEDROCK_MODEL_ID=us.anthropic.claude-3-5-sonnet-20241022-v2:0

# DynamoDB Tables (from CloudFormation outputs)
USERS_TABLE=ai-wardrobe-users
WARDROBE_ITEMS_TABLE=ai-wardrobe-wardrobe-items
OUTFITS_TABLE=ai-wardrobe-outfits

# S3 Bucket (from CloudFormation outputs)
S3_BUCKET=ai-wardrobe-images-YOUR_ACCOUNT_ID

# API Configuration
API_HOST=0.0.0.0
API_PORT=8080

# MCP Server Configuration
MCP_HOST=localhost
MCP_PORT=8000

# Frontend Configuration (for CORS)
FRONTEND_URL=http://localhost:3000