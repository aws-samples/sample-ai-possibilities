# ======================
# Video Keeper - Environment Configuration
# ======================

# ==================
# AWS Configuration
# ==================
AWS_REGION=us-east-1
PRIMARY_REGION=us-east-1  # All Nova 2 models are in us-east-1

# ==================
# OpenSearch Configuration
# ==================
# OpenSearch Serverless collection endpoint (without https://)
OPENSEARCH_ENDPOINT=your-collection-id.us-east-1.aoss.amazonaws.com
INDEX_NAME=video-insights-rag

# ==================
# S3 Buckets
# ==================
# Primary bucket in us-east-1 (for videos, metadata, thumbnails, embeddings)
VIDEO_BUCKET=your-video-bucket
S3_BUCKET=your-video-bucket  # Alias for VIDEO_BUCKET (backward compatibility)

# ==================
# Nova 2 Models Configuration
# ==================
# All Nova 2 models run in us-east-1

# Nova Omni - Video understanding and transcription
NOVA_OMNI_MODEL_ID=global.amazon.nova-2-omni-v1:0

# Nova Lite 2.0 - Entity extraction (NER)
NOVA_LITE_MODEL_ID=global.amazon.nova-2-lite-v1:0
NOVA_MAX_CHARS=350000  # Max characters for Nova input

# Nova Multimodal Embeddings - Video and text embeddings
NOVA_EMBEDDING_MODEL_ID=amazon.nova-2-multimodal-embeddings-v1:0
NOVA_EMBEDDING_DIMENSION=3072  # Embedding dimension (3072, 1024, 384, or 256)

# ==================
# API Server Configuration
# ==================
# Video Keeper Assistant API
API_HOST=localhost
API_PORT=8090

# Standalone Video API
VIDEO_API_HOST=localhost
VIDEO_API_PORT=8091

# MCP Server
MCP_HOST=localhost
MCP_PORT=8008

# ==================
# AI Agent Configuration
# ==================
# Nova Omni model for the assistant
BEDROCK_MODEL_ID=global.amazon.nova-2-omni-v1:0
MODEL_TEMPERATURE=0.3

# ==================
# Search Configuration
# ==================
# Default similarity threshold for vector searches (0.0 to 1.0)
DEFAULT_SIMILARITY_THRESHOLD=0.8

# ==================
# Frontend Configuration
# ==================
# React app environment variables
REACT_APP_API_URL=http://localhost:8090
REACT_APP_VIDEO_API_URL=http://localhost:8091
REACT_APP_MCP_URL=http://localhost:8008/sse
